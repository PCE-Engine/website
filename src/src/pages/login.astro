---
import Layout from '../layouts/Layout.astro';
import Chessboard from '../components/Chessboard.astro';
---

<Layout title="Login or register to eChess">
    <div id="layout">
        <nav>
            <div><img src="/logo.png"><h1>eChess</h1></div>
        </nav>
        <main>
            <div id="form-container">
                <div>
                    <div class="underline" onclick="((e) => { Object.values(e.target.parentElement.children).forEach(el => { el.classList.remove('underline') }); e.target.classList.add('underline'); })(arguments[0]); document.querySelector('#register').classList.remove('active')">Login</div>
                    <div onclick="((e) => { Object.values(e.target.parentElement.children).forEach(el => { el.classList.remove('underline') }); e.target.classList.add('underline'); document.querySelector('#register').classList.add('active') })(arguments[0])">Register</div>
                </div>
                <div>
                    <form id="register" action="">
                        <div>
                            <h2>Register</h2>
                            <div>
                                <label>Username</label><input /> 
                                <label>E-mail</label><input /> 
                            </div>
                            <div>
                                <label>Password</label><input type="password" /> 
                                <label>Confirm password</label><input type="password" /> 
                            </div>
                            <div>
                                <label>Newsletter</label><input type="checkbox" /> 
                            </div>
                            <div>
                                <button>Create account</button>
                            </div>
                        </div>
                    </form>
                    <form id="login" action="">
                        <div>
                            <h2>Login</h2>
                            <div>
                                <label>Username or e-mail</label><input /> 
                            </div>
                            <div>
                                <label>Password</label><input type="password" /> 
                            </div>
                            <div>
                                <label>Remember me</label><input type="checkbox" /> 
                            </div>
                            <div>
                                <button>Login</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </main>
        <footer><i>eChess copyright Â© 2023-2023</i></footer>
    </div>
</Layout>

<style>
    @import url('https://fonts.googleapis.com/css2?family=PT+Serif&display=swap');

    #layout {
        position: absolute;
        min-height: 100%;
        min-width: 100%;
        display: grid;
        grid-template-rows: 140px 1fr 50px;
    }

    body {
        background: #011109;
        color: #fefefe;
    }
    h1 {
        font-family: 'PT Serif', serif;
        font-size: 60px;
        line-height: 150%;
    }
    nav {
        display: flex;
        justify-content: center;
        padding: 20px;
    }
    nav > div {
        display: flex;
        gap: 30px;
    }
    nav img {
        max-height: calc(100% - 10px);
        user-select: none;
        -moz-user-select: none;
        -webkit-user-select: none;
        -webkit-user-drag: none;
    }
    @media screen and (max-width: 450px) {
        nav img {
            display: none;
        }
        #width-limiter {
            padding-top: 0px;
            padding-bottom: 20px;
        }
    }

    main { 
        position: relative;
        left: 50%;
        transform: translateX(-50%);
        width: 100%;
        max-width: 700px;
    }
    #form-container {
        display: grid;
        grid-template-rows: 40px 1fr;
        width: 100%;
        height: 200px;
        position: relative;
        top: 50%;
        transform: translateY(-50%);
    }
    #form-container > div {
        position: relative;
    }
    #form-container > div:first-child {
        display: flex;
        gap: 20px;
    }
    #form-container > div:first-child > div {
        cursor: pointer;
        user-select: none;
    }
    .underline {
        text-decoration: underline;
    }
    .active {
        z-index: 2;
    }
    form {
        position: absolute;
        background: #011109;
        width: 100%;
        height: 100%;
    }

    footer {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    @media screen and (max-width: 450px) {
        footer {
            font-size: 13px;
        }
    }
</style>
