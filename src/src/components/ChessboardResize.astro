<script>
    if (!window['chessboards'])
        window['chessboards'] = {};

    window.onresize = () => {
        Object.keys(window['chessboards']).forEach(el => {
            window['chessboards'][el].u = (window['chessboards'][el].parentElement.clientWidth) / 18;
            let u = window['chessboards'][el].u;

            window['chessboards'][el].parentElement.querySelectorAll('td').forEach(td => {
                td.style.width = `${2 * u}px`
                td.style.height = `${2 * u}px`
            })
        })
    }
</script>
